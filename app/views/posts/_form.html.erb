<%= form_for(post, remote:true)  do|f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, "Тема:" %>
    <%= f.text_field :title, class: "form-control form-width" %>
  </div>
  <div class="field form-group">
    <%= f.label :image, "Катинка:" %>
    <%= f.file_field :image %>
  </div>
  <div class="field form-group">
    <%= f.label :content, "Высказывание:"%>
    <%= f.text_area :content, class: "form-control form-width", rows:"3" %>
  </div>

  <div class="actions button-margin">
    <%= f.submit "Сказать" , class: "btn btn-success" %>
  </div>
<% end %>
