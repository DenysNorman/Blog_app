
<% provide(:title, "Post") %>
<h2><%= @post.user.name %> post</h2>
<div class="container container_post">
<% if @post.image? %>
  <%= image_tag @post.image_url , class:'image_logo'%>
<% else %>
  <%= image_tag 'defaultimage.jpg' , class:'image_logo'%>
<% end %>
<span class='right_action' > <%= set_date(@post) %> </span>
<h3><strong>Title:</strong> <%= @post.title %></h3>
<div class='content'>
  <h4><strong>Content:</strong></h4>
  <p><%= @post.content %></p>
</div>
</div>
<%= render 'commentsblock' %>
<div class = "show_action">
<% if user_signed_in? && @post.user == current_user  %>
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-warning" %>
<% end %>
<%= link_to 'Back', posts_path, class: "btn btn-primary" %>
</div>