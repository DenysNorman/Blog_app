<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="downlited">
  <header class="navbar navbar-fixed-top navbar-inverse" id="header_style">
    <div class="container">
      <%= link_to image_tag('logo_exsm.png', alt: "blog-logo"),root_path, id: "logo"%>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if !user_signed_in? %>
            <li><%= link_to "Регистрация", new_user_registration_path %></li>
            <li><%= link_to "Войти", new_user_session_path %></li>
          <% else %>
            <li><%= link_to "Выйти", destroy_user_session_path, method: :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container", id="style_for_body">
    <div class= 'views' data-vies="<%= track_visits %>">
      <% if track_visits % 10 == 0 %>
        <%= render 'baner' %>
      <% end %>
    </div>
    <%= yield %>
  </div>
  </body>
</html>
