<% provide(:title, "Высказывания") %>
<span id="index"></span>
<div class="background-show">
<p class="messages">
  <span class="notice"><%= notice %></span>
  <span class="alert"><%= alert %></span></p>

<h1>Высказывания</h1>


<table class="table">
  <% if @posts.count == 0 %>
    <h2>Никто ничего не сказал.</h2>
  <% else %>
    <%= render @posts %>
  <% end %>
</table>

<br>
<%= link_to 'Высказаться', new_post_path, remote: true, id:"new_post_link", class: "btn btn-success"  %>
</div>