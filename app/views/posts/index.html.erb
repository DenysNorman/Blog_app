<p id="notice"><%= notice %></p>
<% provide(:title, "Posts") %>
<h1>Posts</h1>


<table class="table">
    <% @posts.each do |post| %>
      <tr>
        <td class="info"><span>Author:</span> <%= post.user.name%></td>
      </tr>
      <tr class="warning">
        <td><span>Title:</span> <%= post.title %></td>
      </tr>
      <tr class="active borders">
        <td><%= post.content %>
          <div class="action-btns">
            <%= link_to 'Show', post, class: "btn btn-info" %>
            <% if post.user == current_user %>
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-warning" %>
            <%= link_to 'Destroy', post, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?'} %>
          </div>

        </td>
        <% end %>
      </tr>
<% end %>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
